page {
  padding-bottom: calc(50px + env(safe-area-inset-bottom));
}

.tabs {
  position: sticky;
  top: 0;
  z-index: 1;
  margin-bottom: var(--base-space);
}

.create-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: url(https://s.522573.com/miniprogram/c5gen.png) no-repeat center / 40rpx var(--primary-color);
  box-shadow: 0 0 16rpx 0 rgba(0, 0, 0, 0.2);
  position: fixed;
  right: 16rpx;
  bottom: calc(16rpx + 50px + env(safe-area-inset-bottom));
  z-index: 1;
}

.card {
  color: var(--text-color);
  padding: 0 var(--base-space) var(--base-space);
}
.card .content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: var(--base-space) var(--base-space) 0;
}
.card .head {
  color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
}
.card .avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.card .future, .card .now, .card .past {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
  color: #FA8C16;
  background: #FFEEDD;
  border: 1rpx solid #FFDBB6;
}
.card .now {
  color: #13CE66;
  background: #E1F9EC;
  border: 1rpx solid #A6E1C1;
}
.card .past {
  color: rgba(0, 0, 0, 0.15);
  background: #F2F2F2;
  border: 1rpx solid #D9D9D9;
}
.card .name {
  margin-top: var(--base-space);
  font-weight: bold;
}
.card .cover {
  margin-top: var(--base-space);
  height: 260rpx;
  background: no-repeat center / cover;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 60rpx;
  position: relative;
}
.card .cover.type-1 {
  background-image: url(https://s.522573.com/miniprogram/urhy8.png);
}
.card .cover.type-2 {
  background-image: url(https://s.522573.com/miniprogram/95aaf.png);
}
.card .cover.type-3 {
  background-image: url(https://s.522573.com/miniprogram/ei9mt.png);
}
.card .cover .goods-box {
  width: 100rpx;
  height: 100rpx;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}
.card .cover .goods-box:not(:first-child) {
  margin-left: 8rpx;
}
.card .cover image {
  width: 100%;
  height: 100%;
}
.card .cover .status-time {
  height: 60rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.5) 100%);
  border-radius: 0 0 4rpx 4rpx;
  padding: var(--base-space) 16rpx 0;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  font-size: 22rpx;
  color: var(--text-color-inverse);
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.card .info {
  margin-top: var(--base-space);
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.card .win {
  margin-top: var(--base-space);
  font-weight: bold;
  color: #FF4949;
  background: #FDF0F0;
  border-radius: 4rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.card .win image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}
.card .bottom {
  margin-top: var(--base-space);
  margin-left: -24rpx;
  margin-right: -24rpx;
  border-top: 1rpx solid var(--border-color);
  display: flex;
  align-items: center;
  text-align: center;
}
.card .bottom view {
  flex: 1;
  padding: 20rpx;
  font-size: 26rpx;
  color: var(--link-color);
}
.card .bottom view:not(:first-child) {
  border-left: 1rpx solid var(--border-color);
}
